<Window x:Class="FileAudioSource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileAudioSource"
        xmlns:OpenTok="clr-namespace:OpenTok;assembly=WPFVideoRenderer"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Button x:Name="SelectSourceFileButton" Content="Select source file" Height="40" HorizontalAlignment="Center" Click="SelectSourceFileButton_Click" />
            <TextBlock x:Name="SelectedFileInfo" Height="40" HorizontalAlignment="Center" />
        </StackPanel>        
    </Grid>
</Window>
